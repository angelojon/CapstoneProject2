<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Oswald', sans-serif !important;
        overflow-x: hidden;
    }

    a {
        text-decoration: none;
        color: black;
    }

    p {
        color: black;
    }

    body {
        background-color: #FFFFFF;
    }

    /* Pastel Colors */
    .pastel-white {
        background-color: #FFFFFF; /* Light Blue */
    }

    .pastel-try {
        background-color: #DADDB1; /* Light Blue */
    }

    /* Section Styles */
    .section {
        padding: 20px;
        margin: 20px 0;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Heading Styles */
    h1 {
        color: #333;
    }

    /* List Styles */
    ul {
        list-style-type: disc;
        margin-left: 20px;
    }

    /* Media Styles */
    .media {
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px;
        background-color: #fff;
    }

    .customer-feedback-section {
        text-align: center;
    }

    .customer-feedback-content {
        text-align: center;
    }

    .carousel-caption {
        margin-right: 50px; /* Change this value to adjust the leftward movement */
    }

    /* Add this CSS for the carousel fade animation */
    .carousel.fade .carousel-inner .carousel-item {
        transition: opacity 1s ease-in-out;
    }

        .carousel.fade .carousel-inner .carousel-item.active {
            opacity: 1;
        }

            .carousel.fade .carousel-inner .carousel-item-next,
            .carousel.fade .carousel-inner .carousel-item-prev,
            .carousel.fade .carousel-inner .carousel-item.active.left,
            .carousel.fade .carousel-inner .carousel-item.active.right {
                opacity: 0;
            }
</style>
