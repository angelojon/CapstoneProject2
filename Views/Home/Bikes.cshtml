@model _1FinalCapstone.Models.Merge

@{
    ViewBag.Title = "Bikes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bike Builder</title>

</head>
<body>
    <div class="tabs">
        <input id="web" type="radio" name="slider" checked />
        <input id="graphics" type="radio" name="slider" />
        <input id="photography" type="radio" name="slider" />
        <div class="buttons">
            <label for="web"></label>
            <label for="graphics"></label>
            <label for="photography"></label>
        </div>
        <div class="content">
            <div class="box web">
                <div class="contentBx">
                    <h2>EMBRACE THE BIKE LOVE <span style="color: dodgerblue;"><br />& CRAFT IT YOUR WAY</span></h2>
                    <button>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="~/CustomerBuilder/BuilderMain" style="text-decoration: none;"> Build Now &#10132;</a>
                        }
                        else
                        {
                            <a href="~/Account/Login" style="text-decoration: none;">Login to Build</a>
                        }
                    </button>
                </div>

            </div>
            <div class="box graphics">
                <div class="contentBx">
                    <h2>CHOOSE YOUR WAY <span style="color: dodgerblue;"><br />& WE'LL BUILD IT FOR YOU</span></h2>
                    <button>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="~/CustomerBuilder/BuilderMain" style="text-decoration: none;"> Build Now &#10132;</a>
                        }
                        else
                        {
                            <a href="~/Account/Login" style="text-decoration: none;">Login to Build</a>
                        }
                    </button>

                </div>
            </div>
            <div class="box photography">
                <div class="contentBx">
                    <h2>FEATURED <span style="color: dodgerblue;">BUILD</span></h2>
                    <h2 style="color: white;">Specialized StumpJumper S-Works </h2>
                    <button>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="~/CustomerBuilder/BuilderMain" style="text-decoration: none;"> Build Now &#10132;</a>
                        }
                        else
                        {
                            <a href="~/Account/Login" style="text-decoration: none;">Login to Build</a>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<style>







    h2 {
        color: white;
        text-align: center; /* Center align the text */
        margin: 0; /* Remove margin */
        padding: 0; /* Remove padding */
        font-size: 75px; /* Set your desired font size */
        position: relative; /* Required for absolute positioning */
        animation: slideFromRight 2s linear; /* Apply the slideFromRight animation */
    }


    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        font-family: 'Oswald', sans-serif;
    }

    .container {
        position: relative;
        width: 100%;
        height: 100vh;
        background: black;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    .tabs input {
        visibility: hidden;
        display: none;
    }

    .buttons {
        position: absolute;
        bottom: 50px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 1000000;
    }

        .buttons label {
            width: 20px;
            height: 20px;
            background: white;
            opacity: 0.5;
            border-radius: 20px;
            cursor: pointer;
            transition: 0.5s;
        }

    .tabs input:nth-child(1):checked ~ .buttons label:nth-child(1),
    .tabs input:nth-child(2):checked ~ .buttons label:nth-child(2),
    .tabs input:nth-child(3):checked ~ .buttons label:nth-child(3) {
        opacity: 1;
        width: 50px;
    }

    .content {
        position: relative;
        width: 300vw;
        display: flex;
        transition: 0.5s;
        overflow: hidden;
    }

        .content .box {
            position: relative;
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            user-select: none;
            padding: 40px;
        }

            .content .box:nth-child(1) {
                background-image: url('../../bbpic1.jpg');
                background-size: cover; /* Add this line to make the image fit to your screen */
                width: 100%;
                height: 100vh;
            }

            .content .box:nth-child(2) {
                background-image: url('../../bbimage3.jpg');
                background-size: cover; /* Add this line to make the image fit to your screen */
                width: 100%;
                height: 100vh;
            }


            .content .box:nth-child(3) {
                background-image: url('../../sworks.png');
                background-size: cover; /* Add this line to make the image fit to your screen */
                width: 100%;
                height: 100vh;
            }

    .tabs input:nth-child(1):checked ~ .content {
        left: 0;
    }

    .tabs input:nth-child(2):checked ~ .content {
        left: -100vw;
    }

    .tabs input:nth-child(3):checked ~ .content {
        left: -200vw;
    }

    .content .box .contentBx {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 10px;
    }



        .content .box .contentBx button {
            font-size: 1.2em;
            text-decoration: none;
            text-transform: uppercase;
            padding: 15px 35px;
            background: white;
            color: black;
            letter-spacing: 0.05em;
            margin-top: 10px;
            font-weight: 600;
            border: none;
            border-radius: 40px;
            transition: 0.05s;
        }

            .content .box .contentBx button:hover {
                letter-spacing: 0.2em;
            }
</style>

